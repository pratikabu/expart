<database-info>
    <!-- whether it is container managed for connection pooling or not -->
    <container-managed>false</container-managed>

    <!-- if container managed then the context path should be present here -->
    <context-path></context-path>

    <!--the total number of connections to be pooled-->
    <pool-size>20</pool-size>

    <!--the username and password for the database to enter in-->
    <username>admin</username>
    <password>tseting</password>

    <!-- the connectivity url of the driver -->
    <connectivity-url>jdbc:odbc:Driver={MicroSoft Access Driver (*.mdb)};DBQ=pls\\expartdb.mdb</connectivity-url>

    <!-- fully qualified driver class name -->
    <driver-class>sun.jdbc.odbc.JdbcOdbcDriver</driver-class>

    <!-- jar file names related to this driver -->
</database-info>
